generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())

  invoices  Invoice[]
  files     File[]
}

model Invoice {
  id          String   @id @default(cuid())
  number      String   @unique
  amount      Float
  description String?
  createdAt   DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
}

model File {
  id        String   @id @default(cuid())
  filename  String
  url       String
  createdAt DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
}

model History {
  id        String   @id @default(cuid())
  action    String
  createdAt DateTime @default(now())
}